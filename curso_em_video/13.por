//CLAUDEMIR SOUZA - Aumento de 15% do salário
programa
{
	funcao inicio()
	{
	real sal, novosal
	escreva("========== AUMENTO DE 15% NO SALÁRIO ==========")
	escreva("\nDigite o seu salário atual: R$ ")
	leia(sal)
	novosal = sal + (sal*15/100)
	escreva("Seu salário de R$ ", sal," subiu para R$ ", novosal)
	}
}
