//CLAUDEMIR SOUZA - SALÁRIO DE UM FUNCIONÁRIO
programa
{
	funcao inicio()
	{
	cadeia nome
	real sal
	escreva("Digite o nome do funcionário: ")
	leia(nome)
	escreva("Digite o salário do funcionário:  ")
	leia(sal)
	escreva("O funcionário ",nome,", tem um salário de R$ ", sal)
	}
}
