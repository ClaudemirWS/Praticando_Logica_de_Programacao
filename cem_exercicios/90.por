programa
{	

	funcao vazio somador (inteiro n1, inteiro n2)
	{
		inteiro soma = 0
		soma 
		= n1 + n2
		escreva("A soma dos dois números é: ", soma)
	}
	
	funcao inicio()
	{
		inteiro num1, num2
		escreva("Digite um número: ")
		leia(num1)
		escreva("Digite outro número: ")
		leia(num2)
		somador(num1, num2)
	}	
	
}
