//CLAUDEMIR SOUZA - ANTECESSOR E SUCESSOR
programa
{
	funcao inicio()
	{
	inteiro num
	escreva("Digite um número: ")
	leia(num)
	escreva("O número ", num," tem como antecessor o ", num-1, " e como sucessor o ", num+1, ".") 
	}
}
