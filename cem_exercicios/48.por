//CLAUDEMIR SOUZA - SOMA ENTRE 7 NÚMEROS.
programa
{
	
	funcao inicio()
	{
		inteiro i = 0, n = 0, soma = 0
		enquanto (i < 7)
		{
			i += 1
			escreva("Escreva o ", i,"º número: ")
			leia(n)
			soma += n	
		}
		escreva("A soma entre todos os números é: ", soma)		
	}	
	
}
